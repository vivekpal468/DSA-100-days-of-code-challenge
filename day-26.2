class Solution {
public:
    int buyChoco(vector<int>& arr, int money) {
        int min = INT_MAX;
        int s_min = INT_MAX;
        for(int i=0; i<arr.size(); i++)
        {
            if(arr[i]<=min)
            {
                s_min=min;
                min=arr[i];
            }
            else if(arr[i]>min && arr[i]<s_min)
            s_min=arr[i];
        }
        int totalcost = min + s_min;
        if(money>=totalcost) return money-totalcost;
        else return money;
    }
};
