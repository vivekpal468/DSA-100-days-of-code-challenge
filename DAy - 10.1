class Solution {
public:
    void rotate(vector<vector<int>>& matrix) {
        int n=matrix.size();
        //first transpose the matrix (row to col && col to row)
        for(int i=0;i<n-1;i++)
        {
            for(int j=i+1;j<n;j++)
            {
                swap(matrix[i][j], matrix[j][i]);
            }
        }

        //reverse each rows of tranposed matrix.
        // for(int i=0;i<n; i++)
        // reverse(matrix[i].begin(), matrix[i].end());

        //if you don't want to use thrn reverse function
        // to reverse each rows
        for(int i=0; i<n; i++)
        {
            int start=0;
            int end=n-1;
            while(start<end)
            {
                swap(matrix[i][start], matrix[i][end]);
                start++;
                end--;
            }
        };
    }
};
