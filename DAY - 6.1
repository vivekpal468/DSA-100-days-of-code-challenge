class Solution{
	
	
	public:
	long long countTriplets(long long arr[], int n, long long sum)
	{
	    // Your code goes here
	    long long count=0;
	    sort(arr, arr+n);//it takes O(logn)
	   for(int i=0; i<n; i++) // it takes O(n)
	   {
	       int j=i+1, k=n-1;
	       while(j<k)//it takes lesser than the O(n)
	       {
	           int s = arr[i] +arr[j] +arr[k];
	           if(s < sum)
	           {
	               count+=k-j;
	               j++;
	           }
	           else
	           k--;
	       }
	   }                //Finally! we can say that the overall time complexity of this problem is 0(n^2)
	                    //space complexity will be O(1) space.....
	    return count;
	}
		 

};

