class Solution {
public:
    int wateringPlants(vector<int>& plants, int capacity) {
        int ans=0; int total_water=capacity;
        for(int i=0;i<plants.size();i++)
        {
            if(total_water>=plants[i])
            {
                 ans++;
                 total_water-=plants[i];
            }
            else{
                ans+=i;
                ans+=i+1;
                total_water=capacity;
                total_water-=plants[i];
            }
        }
        return ans;
    }
};
