void findreverse(int l, int r, vector<int> &arr)
{
	if(l>=r) return;
	//do small tasks
	swap(arr[l], arr[r]);
	//ask recursion to handle the remaining part
	findreverse(l+1,r-1,arr);
}
void reverseArray(vector<int> &arr , int m)
{
	// Write your code here.
	findreverse(m+1, arr.size()-1, arr);
}
